<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        app:cardBackgroundColor="#FFF7F7"
        app:cardCornerRadius="17dp"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="290dp"
            android:padding="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/userProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="#2C2727"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@+id/userProductImage"
                app:layout_constraintStart_toStartOf="@+id/userProductImage"
                app:layout_constraintTop_toBottomOf="@+id/userProductImage" />

            <ImageView
                android:id="@+id/userProductImage"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/userProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textColor="#2C2727"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/userProductName"
                app:layout_constraintTop_toBottomOf="@+id/userProductName" />

            <TextView
                android:id="@+id/userproductcat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textColor="#2C2727"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/userProductPrice"
                app:layout_constraintStart_toStartOf="@+id/userProductPrice"
                app:layout_constraintTop_toBottomOf="@+id/userProductPrice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>