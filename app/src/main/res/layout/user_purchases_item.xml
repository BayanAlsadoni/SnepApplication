<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        android:outlineAmbientShadowColor="#eee"
        app:cardUseCompatPadding="true"
        android:padding="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/purchImage"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/purchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:text="name"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/purchImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/purchRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:text="rate"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/purchName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/purchDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                android:text="describtion"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/purchImage"
                app:layout_constraintTop_toBottomOf="@+id/purchLocation" />

            <TextView
                android:id="@+id/purchLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                android:text="location"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/purchImage"
                app:layout_constraintTop_toBottomOf="@+id/purchName" />

            <TextView
                android:id="@+id/purchPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="price"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@+id/purchRate"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/purchRate"
                app:layout_constraintTop_toBottomOf="@+id/purchRate" />

           </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>